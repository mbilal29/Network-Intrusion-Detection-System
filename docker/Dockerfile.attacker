FROM alpine:latest

# Install networking and attack tools (hping3 not available in Alpine)
RUN apk add --no-cache \
    nmap \
    nmap-scripts \
    python3 \
    py3-pip \
    tcpdump \
    bash

# Install Scapy for custom attacks
RUN pip3 install --break-system-packages scapy

# Default command: drop into shell
CMD ["/bin/bash"]
